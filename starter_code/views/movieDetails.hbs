<div class="movieDetails">
  <img class="movieImage" src="{{movie.image}}" alt="">
   
  <div>
        <a href="/movies">Go Back</a>
        <h3 class="title">{{movie.title}}</h3>
        <h4>"Director : "{{movie.director}}</h4>
        <h5>Stars :</h5>
        <ul>
            {{#each movie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        
        <p> {{#each movie.showtimes}} {{this}} |  {{/each}}</p> 
       
  </div>
</div>