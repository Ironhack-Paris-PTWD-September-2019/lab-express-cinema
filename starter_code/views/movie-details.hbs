<div class="page-movie-details">
  <div>
    <img src="{{movie.image}}"/>
  </div>
  <div>
    <a href="/movies">Go back</a>
    <h1>{{movie.title}}</h1>
    <h3>Director: {{movie.director}}</h3>
    <div class="stars">
      <p><b>Stars</b></p>
      <ul>
        {{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
    <p>{{movie.description}}</p>
    <ul class="showtimes">
      {{#each movie.showtimes}}
      <li>{{this}} |</li>
      {{/each}}
    </ul>
  </div>
</div>